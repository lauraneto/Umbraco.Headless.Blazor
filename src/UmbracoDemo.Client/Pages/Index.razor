@page "/{*slug}"
@using UmbracoDemo.Client.Clients

<PageTitle>@(Page?.Name) - Headless Demo</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">@(Page?.Name)</MudText>

@code {
    [Parameter]
    public required string Slug { get; set; }

    [Inject]
    public required IUmbracoClient UmbracoClient { get; set; }

    public IApiContentResponseModel? Page { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        Page = await UmbracoClient.GetPageByPath($"/{Slug}");
    }

}